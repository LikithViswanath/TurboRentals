<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="rentalHistory"
            type="com.example.turborentals.data.RentalHistory" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        app:cardElevation="@dimen/elevation"
        app:layout_marginBaseline="@dimen/margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/modelNumberTextView"
                    style="@style/rental_list_style"
                    android:layout_width="21dp"
                    android:text="@string/model_name"
                    android:textStyle="bold"
                    app:setModelName="@{rentalHistory}"/>

                <TextView
                    android:id="@+id/rcNumberTextView"
                    style="@style/rental_list_style"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/semi_drawable"
                    android:gravity="center"
                    android:text="@string/dl_67_a_7283"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:setRcNumber="@{rentalHistory}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    style="@style/rental_list_style"
                    android:layout_width="10dp"
                    android:layout_height="48dp"
                    android:background="@mipmap/spped_meter_round" />

                <LinearLayout
                    style="@style/rental_linera_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/semi_drawable">

                    <TextView
                        android:id="@+id/km00"
                        style="@style/rental_reading_textView"
                        android:background="@drawable/total_rental_text_view_drawable"
                        android:backgroundTint="@color/black"
                        android:text="0"
                        android:textColor="@color/white"
                        app:setKm00="@{rentalHistory}"/>

                    <TextView
                        android:id="@+id/km01"
                        style="@style/rental_reading_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/total_rental_text_view_drawable"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:setKm01="@{rentalHistory}"/>

                    <TextView
                        android:id="@+id/km02"
                        style="@style/rental_reading_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/total_rental_text_view_drawable"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:setKm02="@{rentalHistory}"/>

                    <TextView
                        android:id="@+id/km03"
                        style="@style/rental_reading_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/total_rental_text_view_drawable"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:setKm03="@{rentalHistory}"/>

                    <TextView
                        android:id="@+id/km04"
                        style="@style/rental_reading_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/total_rental_text_view_drawable"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:setKm04="@{rentalHistory}"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/rental_linera_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/semi_drawable"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/km10"
                        style="@style/rental_reading_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/total_rental_text_view_drawable"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:setKm10="@{rentalHistory}"/>

                    <TextView
                        android:id="@+id/km11"
                        style="@style/rental_reading_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/total_rental_text_view_drawable"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:setKm11="@{rentalHistory}"/>

                    <TextView
                        android:id="@+id/km12"
                        style="@style/rental_reading_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/total_rental_text_view_drawable"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:setKm12="@{rentalHistory}"/>

                    <TextView
                        android:id="@+id/km13"
                        style="@style/rental_reading_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/total_rental_text_view_drawable"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:setKm13="@{rentalHistory}"/>

                    <TextView
                        android:id="@+id/km14"
                        style="@style/rental_reading_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/total_rental_text_view_drawable"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:setKm14="@{rentalHistory}"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="12 Oct - 13 Oct 2019"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:setDates="@{rentalHistory}"/>

                <TextView
                    android:id="@+id/daysTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_brawable"
                    android:backgroundTint="#AC7BEB"
                    android:gravity="center"
                    android:text="4 Days"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:setDays="@{rentalHistory}"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>